@model IEnumerable<Theatre.Web.Models.Domain.TheatreShow>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Theatre Shows</h1>
    <p class="btn btn-success">
        <a asp-action="Create" style="text-decoration:none" class="text-light">Create New</a>
    </p>
    <div class="row">
        @foreach (var item in Model) {
        <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img src="@item.ImageUrl" class="card-img-top" style="height:10em" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <h6>@Html.DisplayFor(modelItem => item.Place)</h6>
                        <h6>@Html.DisplayFor(modelItem => item.ShowDate)</h6>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        <div class="row">
                            <div class="col">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                            </div>
                            <div class="col">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            </div>
                            <div class="col">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                        
                    </div>
                </div>
        </div>
        }
    </div>
</div>